<%= link_to '申請推廣教育課程', new_cce_class_path %>
<%= link_to '課程向度列表', dimensions_path %>

<h1>推廣教育課程列表</h1>

<table>
  <thead>
    <tr>
      <th>名稱</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cce_classes.each do |cce_class| %>
      <tr>
        <td><%= cce_class.title %></td>
        <%if cce_class.verified%>
        <td><%= link_to '取消通過', controller: :cce_classes, action: :verified, id: cce_class.id %></td>
        <%else%>
        <td><%= link_to '通過', controller: :cce_classes, action: :verified, id: cce_class.id %></td>        
        <%end%>
        <td><%= link_to '新增子課程', controller: :courses, action: :new, cce_class_id: cce_class.id %></td>
        <td><%= link_to '詳細', cce_class %></td>
        <td><%= link_to '編輯', edit_cce_class_path(cce_class) %></td>
        <td><%= link_to '刪除', cce_class, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @cce_classes %>
